programa {
  funcao inicio() 
  {
    inteiro idade
    escreva ("Informe sua idade")
    leia (idade)

    se (idade >= 18) 
    {
            escreva("Você tem ", idade, " anos e é maior de idade.\n")
        }
        senao
        {
            escreva("Você tem ", idade, " anos e é menor de idade.\n")
        }
    }
}
  }
}
